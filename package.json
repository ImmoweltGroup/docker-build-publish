{
  "name": "@immowelt/docker-publish",
  "version": "0.0.0-development",
  "private": false,
  "author": "Immonet dev team <aegaeon@immonet.de> (https://immonet.de)",
  "license": "MIT",
  "description": "A simple CLI to build and publish a repository with an Dockerfile based on GitHub repository release tags.",
  "main": "dist/bin/docker-publish",
  "bin": {
    "docker-publish": "./dist/bin/docker-publish"
  },
  "scripts": {
    "test": "npm run lint && npm run flow && npm run jest:coverage",
    "lint": "eslint src",
    "jest": "jest",
    "jest:watch": "npm run jest -- --watch",
    "jest:coverage": "npm run jest -- --coverage",
    "build:clean": "rimraf dist",
    "build:babel": "babel src --out-dir dist --ignore spec.js",
    "build:flow": "flow-copy-source -v src dist --ignore='*.spec.js'",
    "prebuild": "npm run build:clean",
    "build": "npm run build:babel && npm run build:flow",
    "flow": "flow",
    "flow-typed": "flow-typed",
    "flow-typed-install": "flow-typed install --ignoreDeps=bundled peer --overwrite",
    "prepare": "npm run flow-typed-install",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release pre && npm publish --access=public && semantic-release post"
  },
  "engines": {
    "node": ">=8.3.0",
    "npm": ">=5.3.0"
  },
  "keywords": [],
  "dependencies": {
    "async-exec": "^1.1.0",
    "commander": "^2.11.0",
    "is-url": "^1.2.2",
    "log-fancy": "^1.1.2",
    "node-fetch": "^1.7.2",
    "semver": "^5.4.1"
  },
  "devDependencies": {
    "@immowelt/babel-preset-immowelt": "^1.0.2",
    "@immowelt/eslint-config-immowelt-react": "^1.0.1",
    "@immowelt/jest-preset-node": "^1.0.0",
    "@inkdpixels/commit-analyzer": "^1.0.0",
    "@inkdpixels/release-notes-generator": "^1.0.0",
    "babel-cli": "^6.26.0",
    "eslint": "^4.4.1",
    "flow-bin": "^0.53.0",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.1.2",
    "jest": "^20.0.4",
    "nock": "^9.0.14",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.1",
    "semantic-release": "^7.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ImmoweltGroup/docker-publish.git"
  },
  "release": {
    "analyzeCommits": "@inkdpixels/commit-analyzer",
    "generateNotes": "@inkdpixels/release-notes-generator"
  }
}
